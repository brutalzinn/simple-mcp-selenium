{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/simple-mcp-server.ts", "src/core/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/browser-manager.ts", "src/index.ts", "src/plugin-manager.ts", "src/tools/**/*"]
}
